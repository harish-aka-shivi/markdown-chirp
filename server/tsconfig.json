{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "lib": [
      "es2016",
      "esnext.asynciterable",
      "dom"
    ],
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "jsEnable": true
      }
    ],
    "typeRoots": [
			"src/types",
			"node_modules/@types"
		]
  }
}